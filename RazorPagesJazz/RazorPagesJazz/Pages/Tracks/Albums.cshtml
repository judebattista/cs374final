@page
@model RazorPagesJazz.Pages.Tracks.AlbumsModel
@{
	ViewData["Title"] = "Albums";
}

<h2>Albums containing @Html.DisplayFor(model => model.Tracks.Name)</h2>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Tracks.Name)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Tracks.Name)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Tracks.Duration)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Tracks.Duration)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Tracks.YearRecorded)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Tracks.YearRecorded)
		</dd>
	</dl>
</div>
<div>
	<a asp-page="./Index">Back to List</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Albums[0].Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Albums[0].Duration).
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Albums[0].YearReleased)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Albums)
		{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DurationM):@Html.DisplayFor(modelItem => item.DurationS)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.YearReleased)
			</td>
		</tr>
		}
	</tbody>
</table>

