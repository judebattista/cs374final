@page
@model RazorPagesJazz.Pages.Albums.ArtistsModel
@{
	ViewData["Title"] = "Artists";
}

<h2>Artists on @Html.DisplayFor(model => model.Albums.Title)</h2>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Albums.Title)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Albums.Title)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Albums.DateReleased)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Albums.DateReleased)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Albums.Duration)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Albums.Duration)
		</dd>
	</dl>
</div>
<div>
	<a asp-page="./Index">Back to List</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Artists[0].Fname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Artists[0].Lname)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Artists)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Fname)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Lname)
				</td>
			</tr>
		}
	</tbody>
</table>

